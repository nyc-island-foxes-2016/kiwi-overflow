<%= form_for @question do |f| %>
  <fieldset id="form">
    <div class="input-options">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="input-options">
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>

    <%= f.submit 'Save your question' %>
  </fieldset>
<% end %>
